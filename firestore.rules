
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // وظائف التحقق السيادية
    function isSignedIn() { return request.auth != null; }
    function isSuperAdmin() { return request.auth != null && request.auth.token.email == 'adelbenmaza3@gmail.com'; }
    function getUserData() { return get(/databases/$(database)/documents/users/$(request.auth.uid)).data; }
    function isModerator() { 
      return isSignedIn() && (isSuperAdmin() || getUserData().role == 'moderator'); 
    }
    function isOwner(userId) { return isSignedIn() && request.auth.uid == userId; }

    // ملفات المواطنين
    match /users/{userId} {
      allow read: if true;
      allow create: if isOwner(userId);
      // السماح بتحديث البيانات الشخصية للمالك، وتحديث النقاط من قبل الجميع (للتفاعل)
      allow update: if isSuperAdmin() || isOwner(userId) || (isSignedIn() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['points']));
    }

    // أرشيف المقالات
    match /articles/{articleId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn(); 
      allow delete: if isModerator();
      
      match /comments/{commentId} {
        allow read: if true;
        allow create: if isSignedIn();
        allow delete: if isModerator() || (isSignedIn() && resource.data.authorId == request.auth.uid);
      }
    }

    // البلاغات
    match /reports/{reportId} {
      allow read, update: if isModerator();
      allow create: if isSignedIn();
    }

    // الإشعارات
    match /notifications/{notifId} {
      allow read, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if isSignedIn();
    }

    // المتابعات
    match /follows/{followId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    // المجموعات والرسائل
    match /groups/{groupId} {
      allow read: if true;
      allow write: if isSignedIn();
      match /messages/{msgId} { allow read, write: if isSignedIn(); }
    }

    match /direct_conversations/{chatId} {
      allow read, write: if isSignedIn() && request.auth.uid in resource.data.participants;
      allow create: if isSignedIn();
      match /messages/{msgId} { allow read, write: if isSignedIn(); }
    }
  }
}

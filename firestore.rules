
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() { return request.auth != null; }
    function isDirector() { 
      return isSignedIn() && (
        request.auth.token.email == "adelbenmaza3@gmail.com" || 
        request.auth.uid == "Q6viqCxCS8MWfCsCC3sgm9Jk34i2"
      ); 
    }
    
    match /users/{userId} {
      allow read, list: if true;
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isSignedIn() && (request.auth.uid == userId || isDirector());
    }

    match /articles/{articleId} {
      allow read, list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn(); 
      allow delete: if isSignedIn() && (resource.data.authorId == request.auth.uid || isDirector());
      
      match /comments/{commentId} {
        allow read, list: if true;
        allow create: if isSignedIn();
        allow delete: if isSignedIn() && (request.auth.uid == resource.data.authorId || isDirector());
      }
    }

    match /stories/{storyId} {
      allow read, list: if true;
      allow create: if isSignedIn();
      allow delete: if isSignedIn() && (resource.data.authorId == request.auth.uid || isDirector());
    }

    match /notifications/{notifId} {
      // السماح بالقراءة والقائمة إذا كان المستخدم هو صاحب التنبيه أو المدير العام
      // تم تبسيطها لضمان عدم حدوث أخطاء الصلاحيات
      allow read, list: if isSignedIn() && (isDirector() || resource.data.userId == request.auth.uid);
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && (isDirector() || resource.data.userId == request.auth.uid);
    }

    match /follows/{followId} { 
      allow read, list: if true; 
      allow write: if isSignedIn(); 
    }

    match /direct_conversations/{chatId} {
      allow read, write: if isSignedIn() && (request.auth.uid in resource.data.participants || isDirector());
      allow create: if isSignedIn();
      
      match /messages/{msgId} {
        allow read, write: if isSignedIn();
      }
    }
  }
}

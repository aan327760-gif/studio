
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }

    function isNotBanned() {
      let userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid));
      return userDoc == null || !userDoc.data.has('isBannedUntil') || userDoc.data.isBannedUntil < request.time;
    }

    function isAdmin() {
      let userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid));
      return isSignedIn() && (request.auth.token.email == "adelbenmaza3@gmail.com" || (userDoc != null && userDoc.data.role == "admin"));
    }

    function areFriends(u1, u2) {
      return exists(/databases/$(database)/documents/follows/$(u1)_$(u2)) && 
             exists(/databases/$(database)/documents/follows/$(u2)_$(u1));
    }

    match /users/{userId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update: if isAdmin() || (request.auth.uid == userId && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'isVerified', 'isPro', 'isBannedUntil']));
    }
    
    match /follows/{followId} {
      allow read: if true;
      allow create: if isSignedIn() && isNotBanned();
      allow delete: if isSignedIn() && (resource.data.followerId == request.auth.uid);
    }
    
    match /posts/{postId} {
      allow read, list: if true;
      allow create: if isSignedIn() && isNotBanned();
      allow update: if isAdmin() || (isSignedIn() && isNotBanned() && (resource.data.authorId == request.auth.uid || request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likedBy', 'likesCount'])));
      allow delete: if isAdmin() || (isSignedIn() && resource.data.authorId == request.auth.uid);
      
      match /comments/{commentId} {
        allow read: if true;
        allow create: if isSignedIn() && isNotBanned();
        allow update: if isSignedIn() && isNotBanned() && (resource.data.authorId == request.auth.uid || request.resource.data.diff(resource.data).affectedKeys().hasAny(['likedBy', 'likesCount']));
        allow delete: if isAdmin() || (isSignedIn() && resource.data.authorId == request.auth.uid);

        match /replies/{replyId} {
          allow read: if true;
          allow create: if isSignedIn() && isNotBanned();
          allow update: if isSignedIn() && isNotBanned() && (resource.data.authorId == request.auth.uid || request.resource.data.diff(resource.data).affectedKeys().hasAny(['likedBy', 'likesCount']));
          allow delete: if isAdmin() || (isSignedIn() && resource.data.authorId == request.auth.uid);
        }
      }
    }

    match /direct_conversations/{chatId} {
      allow read: if isSignedIn() && (request.auth.uid in resource.data.participants || isAdmin());
      allow create: if isSignedIn() && isNotBanned() && areFriends(request.resource.data.participants[0], request.resource.data.participants[1]);
      allow update: if isSignedIn() && (request.auth.uid in resource.data.participants);

      match /messages/{messageId} {
        allow read: if isSignedIn() && (request.auth.uid in get(/databases/$(database)/documents/direct_conversations/$(chatId)).data.participants || isAdmin());
        allow create: if isSignedIn() && isNotBanned() && (request.auth.uid in get(/databases/$(database)/documents/direct_conversations/$(chatId)).data.participants);
      }
    }

    match /notifications/{notificationId} {
      allow read, delete, list: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if isSignedIn();
    }

    match /reports/{reportId} {
      allow create: if isSignedIn() && isNotBanned();
      allow read, list, update, delete: if isAdmin();
    }

    match /groups/{groupId} {
      allow read, list: if isSignedIn();
      allow create: if isSignedIn() && isNotBanned();
      allow update: if isSignedIn() && (request.auth.uid in resource.data.members || isAdmin());
      allow delete: if isAdmin();
      
      match /messages/{messageId} {
        allow read, create: if isSignedIn() && (request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members || isAdmin());
      }
    }
  }
}

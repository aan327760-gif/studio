
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // وظائف السيادة الأساسية
    function isSignedIn() { return request.auth != null; }
    
    // قواعد القراءة العامة لجميع المجموعات الأساسية لضمان عدم حدوث أخطاء Permission
    match /users/{userId} {
      allow read: if true;
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isSignedIn(); 
    }

    match /articles/{articleId} {
      // السماح بالقراءة الجماعية والفردية للجميع لضمان عمل الخوارزمية
      allow read, list: if true;
      allow create: if isSignedIn();
      // السماح بالتحديث لإضافة اللايكات والتعليقات ونقاط الأولوية
      allow update: if isSignedIn(); 
      allow delete: if isSignedIn() && (resource.data.authorId == request.auth.uid || request.auth.token.email == "adelbenmaza3@gmail.com");
      
      match /comments/{commentId} {
        allow read, list: if true;
        allow create: if isSignedIn();
        // ميزة الحذف: لصاحب التعليق أو صاحب المقال أو المدير
        allow delete: if isSignedIn() && (
          resource.data.authorId == request.auth.uid || 
          get(/databases/$(database)/documents/articles/$(articleId)).data.authorId == request.auth.uid ||
          request.auth.token.email == "adelbenmaza3@gmail.com"
        );
      }
    }

    match /stories/{storyId} {
      allow read, list: if true;
      allow create: if isSignedIn();
      allow delete: if isSignedIn() && (resource.data.authorId == request.auth.uid || request.auth.token.email == "adelbenmaza3@gmail.com");
    }

    match /reports/{reportId} {
      allow read, create, update: if isSignedIn();
    }

    match /notifications/{notifId} {
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    match /follows/{followId} { 
      allow read, list: if true; 
      allow write: if isSignedIn(); 
    }
    
    match /groups/{groupId} { 
      allow read, list: if true; 
      allow write: if isSignedIn();
      match /messages/{msgId} { allow read, write: if isSignedIn(); }
    }
    
    match /direct_conversations/{chatId} {
      allow read: if isSignedIn() && request.auth.uid in resource.data.participants;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && request.auth.uid in resource.data.participants;
      match /messages/{msgId} { allow read, write: if isSignedIn(); }
    }
  }
}

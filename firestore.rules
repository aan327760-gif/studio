
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() { return request.auth != null; }
    function isOwner(userId) { return request.auth != null && request.auth.uid == userId; }
    function isAdmin() { return request.auth != null && request.auth.token.email == 'adelbenmaza3@gmail.com'; }

    match /users/{userId} {
      allow read: if true;
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isOwner(userId) || isAdmin();
    }

    match /articles/{articleId} {
      allow read: if true;
      allow create: if isSignedIn() && request.resource.data.content.size() <= 1000;
      allow update, delete: if isOwner(resource.data.authorId) || isAdmin();
      
      match /comments/{commentId} {
        allow read: if true;
        allow create: if isSignedIn();
        allow delete: if isAdmin() || (isSignedIn() && resource.data.authorId == request.auth.uid);
      }
    }

    match /follows/{followId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    match /notifications/{notifId} {
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if isSignedIn();
    }

    match /reports/{reportId} {
      allow read, update: if isAdmin();
      allow create: if isSignedIn();
    }
    
    match /groups/{groupId} {
      allow read: if true;
      allow write: if isSignedIn();
      
      match /messages/{messageId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn();
      }
    }

    match /direct_conversations/{chatId} {
      allow read: if isSignedIn() && request.auth.uid in resource.data.participants;
      allow write: if isSignedIn() && request.auth.uid in resource.data.participants;
      
      match /messages/{msgId} {
        allow read, write: if isSignedIn();
      }
    }
  }
}

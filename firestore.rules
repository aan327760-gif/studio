
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // وظائف السيادة الأساسية
    function isSignedIn() { return request.auth != null; }
    
    // ملفات المواطنين - القراءة للجميع
    match /users/{userId} {
      allow read: if true;
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isSignedIn(); 
    }

    // المقالات القومية - القراءة والبحث للجميع
    match /articles/{articleId} {
      allow read, list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn(); 
      allow delete: if isSignedIn();
      
      match /comments/{commentId} {
        allow read, list: if true;
        allow create: if isSignedIn();
        allow delete: if isSignedIn();
      }
    }

    // القصص اليومية (Stories) - القراءة والبحث للجميع
    match /stories/{storyId} {
      allow read, list: if true;
      allow create: if isSignedIn();
      allow delete: if isSignedIn();
    }

    // البلاغات (Reports)
    match /reports/{reportId} {
      allow read, list, create, update: if isSignedIn();
    }

    // التنبيهات
    match /notifications/{notifId} {
      allow read, list, update, delete: if isSignedIn() && (resource == null || resource.data.userId == request.auth.uid);
      allow create: if isSignedIn();
    }

    // المتابعات والمحادثات
    match /follows/{followId} { allow read, list: if true; allow write: if isSignedIn(); }
    match /groups/{groupId} { 
      allow read, list: if true; allow write: if isSignedIn();
      match /messages/{msgId} { allow read, list, write: if isSignedIn(); }
    }
    match /direct_conversations/{chatId} {
      allow read, list, write: if isSignedIn();
      match /messages/{msgId} { allow read, list, write: if isSignedIn(); }
    }
  }
}

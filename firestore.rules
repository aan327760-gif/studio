
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() { return request.auth != null; }
    function isOwner(userId) { return request.auth.uid == userId; }
    function isAdmin() { return request.auth.token.email == 'adelbenmaza3@gmail.com'; }

    match /users/{userId} {
      allow read: if true;
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isSignedIn(); // Allows points incrementing from likes/comments
    }

    match /articles/{articleId} {
      allow read: if true;
      allow create: if isSignedIn() && request.resource.data.content.size() <= 1000;
      allow update, delete: if isOwner(resource.data.authorId) || isAdmin();
      
      match /comments/{commentId} {
        allow read: if true;
        allow create: if isSignedIn();
        allow delete: if isOwner(resource.data.authorId) || isAdmin();
      }
    }

    match /follows/{followId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    match /notifications/{notifId} {
      allow read: if isOwner(resource.data.userId);
      allow create: if isSignedIn();
    }
  }
}

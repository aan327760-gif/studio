
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- الدوال السيادية المساعدة ---
    
    function isSignedIn() {
      return request.auth != null;
    }

    function isSuperAdmin() {
      return isSignedIn() && request.auth.token.email == "adelbenmaza3@gmail.com";
    }

    function isAdmin() {
      let userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid));
      return isSignedIn() && (isSuperAdmin() || (userDoc != null && userDoc.data.role == "admin"));
    }

    function isNotBanned() {
      let userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid));
      return userDoc == null || !userDoc.data.has('isBannedUntil') || userDoc.data.isBannedUntil < request.time;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // فحص الصداقة المتبادلة للمراسلة
    function areFriends(u1, u2) {
      return exists(/databases/$(database)/documents/follows/$(u1)_$(u2)) && 
             exists(/databases/$(database)/documents/follows/$(u2)_$(u1));
    }

    // فحص صلاحية النخبة (توثيق أو إعلام)
    function isElite() {
      let userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid));
      return userDoc.data.isVerified == true || userDoc.data.isPro == true || isAdmin();
    }

    // --- القواعد الجغرافية للبيانات ---

    match /users/{userId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update: if isSuperAdmin() 
                    || (isAdmin() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['isBannedUntil']))
                    || (isOwner(userId) && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['isBannedUntil', 'role', 'isVerified', 'isPro']));
    }
    
    match /follows/{followId} {
      allow read: if true;
      allow create: if isSignedIn() && isNotBanned();
      allow delete: if isSignedIn() && (resource.data.followerId == request.auth.uid);
    }
    
    match /posts/{postId} {
      allow read, list: if true;
      allow create: if isSignedIn() && isNotBanned();
      allow update: if isAdmin() 
                    || (isSignedIn() && isNotBanned() && (
                        resource.data.authorId == request.auth.uid 
                        || request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likedBy', 'likesCount'])
                    ));
      allow delete: if isAdmin() || (isSignedIn() && resource.data.authorId == request.auth.uid);
      
      match /comments/{commentId} {
        allow read: if true;
        allow create: if isSignedIn() && isNotBanned();
        allow update: if isSignedIn() && isNotBanned() && (
                        isOwner(resource.data.authorId)
                        || (
                          // السماح بالإعجاب لأي مواطن مع حماية هوية ونصه
                          request.resource.data.authorId == resource.data.authorId &&
                          request.resource.data.text == resource.data.text &&
                          request.resource.data.diff(resource.data).affectedKeys().hasAny(['likedBy', 'likesCount'])
                        )
                    );
        allow delete: if isAdmin() || (isSignedIn() && isOwner(resource.data.authorId));

        match /replies/{replyId} {
          allow read: if true;
          allow create: if isSignedIn() && isNotBanned();
          allow update: if isSignedIn() && isNotBanned() && (
                          isOwner(resource.data.authorId)
                          || (
                            request.resource.data.authorId == resource.data.authorId &&
                            request.resource.data.diff(resource.data).affectedKeys().hasAny(['likedBy', 'likesCount'])
                          )
                      );
          allow delete: if isAdmin() || (isSignedIn() && isOwner(resource.data.authorId));
        }
      }
    }
    
    match /notifications/{notificationId} {
      allow read, delete: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin());
      allow list: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if isSignedIn() && isNotBanned();
    }
    
    match /groups/{groupId} {
      allow read, list: if isSignedIn() && (
        isAdmin() || 
        (request.auth.uid in resource.data.members) || 
        (resource.data.isPrivate == false)
      );
      // الإنشاء للنخبة فقط برمجياً
      allow create: if isSignedIn() && isNotBanned() && isElite();
      allow update: if isAdmin() || (isSignedIn() && isNotBanned() && (request.auth.uid in resource.data.members));
      allow delete: if isAdmin();
      
      match /messages/{messageId} {
        allow read: if isSignedIn() && (isAdmin() || request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members);
        allow write: if isSignedIn() && isNotBanned() && (request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members);
      }
    }

    match /direct_conversations/{chatId} {
      allow read: if isSignedIn() && (request.auth.uid in resource.data.participants || isAdmin());
      allow write: if isSignedIn() && (request.auth.uid in resource.data.participants || isAdmin());
      // لا محادثة إلا بين أصدقاء (متابعة متبادلة)
      allow create: if isSignedIn() && isNotBanned() && areFriends(request.resource.data.participants[0], request.resource.data.participants[1]);

      match /messages/{messageId} {
        allow read: if isSignedIn() && (request.auth.uid in get(/databases/$(database)/documents/direct_conversations/$(chatId)).data.participants || isAdmin());
        allow write: if isSignedIn() && isNotBanned() && (request.auth.uid in get(/databases/$(database)/documents/direct_conversations/$(chatId)).data.participants) && areFriends(get(/databases/$(database)/documents/direct_conversations/$(chatId)).data.participants[0], get(/databases/$(database)/documents/direct_conversations/$(chatId)).data.participants[1]);
      }
    }

    match /reports/{reportId} {
      allow read, list: if isAdmin();
      allow create: if isSignedIn() && isNotBanned();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
  }
}

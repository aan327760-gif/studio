
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() { return request.auth != null; }
    function isSuperAdmin() { return request.auth != null && request.auth.token.email == 'adelbenmaza3@gmail.com'; }
    
    function getUserData(uid) {
      return get(/databases/$(database)/documents/users/$(uid)).data;
    }
    
    function isModerator() { 
      return isSignedIn() && (isSuperAdmin() || getUserData(request.auth.uid).role == 'moderator'); 
    }

    match /users/{userId} {
      allow read: if true;
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isSignedIn();
    }

    match /articles/{articleId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn();
      allow delete: if isModerator() || (isSignedIn() && resource.data.authorId == request.auth.uid);
      
      match /comments/{commentId} {
        allow read: if true;
        allow create: if isSignedIn();
        allow delete: if isModerator();
      }
    }

    match /stories/{storyId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow delete: if isModerator() || (isSignedIn() && resource.data.authorId == request.auth.uid);
    }

    match /notifications/{notifId} {
      allow read, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if isSignedIn();
    }

    match /follows/{followId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    match /groups/{groupId} {
      allow read: if true;
      allow write: if isSignedIn();
      match /messages/{msgId} { allow read, write: if isSignedIn(); }
    }

    match /direct_conversations/{chatId} {
      allow read, write: if isSignedIn() && request.auth.uid in resource.data.participants;
      allow create: if isSignedIn();
      match /messages/{msgId} { allow read, write: if isSignedIn(); }
    }
  }
}

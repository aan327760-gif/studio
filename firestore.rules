
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // وظيفة للتحقق من تسجيل الدخول
    function isSignedIn() {
      return request.auth != null;
    }

    // البريد الإلكتروني للمدير العام (السلطة العليا)
    function isSuperAdmin() {
      return isSignedIn() && request.auth.token.email == "adelbenmaza3@gmail.com";
    }

    // وظيفة للتحقق من أن المستخدم لديه رتبة مشرف أو هو المدير العام
    function isAdmin() {
      let userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid));
      return isSignedIn() && (isSuperAdmin() || (userDoc != null && userDoc.data.role == "admin"));
    }

    // وظيفة للتحقق من أن المستخدم ليس محظوراً
    function isNotBanned() {
      let userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid));
      return userDoc == null || !userDoc.data.has('isBannedUntil') || userDoc.data.isBannedUntil < request.time;
    }

    // وظيفة للتحقق من ملكية الوثيقة
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // قواعد المستخدمين
    match /users/{userId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update: if isSuperAdmin() 
                    || (isAdmin() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['isBannedUntil']))
                    || (isOwner(userId) && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['isBannedUntil', 'role', 'isVerified']));
    }
    
    // قواعد المتابعة
    match /follows/{followId} {
      allow read: if true;
      allow create: if isSignedIn() && isNotBanned();
      allow delete: if isSignedIn() && (resource.data.followerId == request.auth.uid);
    }
    
    // قواعد المنشورات
    match /posts/{postId} {
      allow read, list: if true;
      allow create: if isSignedIn() && isNotBanned();
      allow update: if isAdmin() || (isSignedIn() && isNotBanned() && (resource.data.authorId == request.auth.uid || request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likedBy', 'likesCount'])));
      allow delete: if isAdmin() || (isSignedIn() && resource.data.authorId == request.auth.uid);
      
      match /comments/{commentId} {
        allow read: if true;
        allow write: if isSignedIn() && isNotBanned();
      }
    }
    
    // قواعد التنبيهات
    match /notifications/{notificationId} {
      // السماح للمستخدم برؤية تنبيهاته فقط، وللنظام برؤية الكل للأغراض الإدارية
      allow read, delete: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin());
      allow list: if isSignedIn() && (request.query.limit <= 50) && (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if isSignedIn() && isNotBanned();
    }
    
    // قواعد المجموعات (اللمة)
    match /groups/{groupId} {
      allow read, list: if isSignedIn() && (
        isAdmin() || 
        (request.auth.uid in resource.data.members) || 
        (resource.data.isPrivate == false)
      );
      allow create: if isSignedIn() && isNotBanned();
      allow update: if isAdmin() || (isSignedIn() && isNotBanned() && (request.auth.uid in resource.data.members));
      allow delete: if isAdmin();
      
      match /messages/{messageId} {
        allow read: if isSignedIn() && (isAdmin() || request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members);
        allow write: if isSignedIn() && isNotBanned() && (request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members);
      }
    }

    // قواعد البلاغات
    match /reports/{reportId} {
      allow read, list: if isAdmin();
      allow create: if isSignedIn() && isNotBanned();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
  }
}


rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }

    function isNotBanned() {
      return isSignedIn() && 
             (!exists(/databases/$(database)/documents/users/$(request.auth.uid)) || 
              get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('isBannedUntil', null) == null || 
              get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isBannedUntil < request.time);
    }

    function isAdmin() {
      return isSignedIn() && (
        request.auth.token.email == "adelbenmaza3@gmail.com" || 
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('role', 'user') == "admin")
      );
    }

    match /users/{userId} {
      allow read, list: if true;
      allow create: if isSignedIn();
      allow update: if isAdmin() || (request.auth.uid == userId);
    }
    
    match /follows/{followId} {
      allow read, list: if true;
      allow create: if isSignedIn() && isNotBanned();
      allow delete: if isSignedIn() && (resource.data.followerId == request.auth.uid);
    }
    
    match /posts/{postId} {
      allow read, list: if true;
      allow create: if isSignedIn() && isNotBanned();
      allow update: if isAdmin() || (isSignedIn() && isNotBanned());
      allow delete: if isAdmin() || (isSignedIn() && resource.data.authorId == request.auth.uid);
      
      match /comments/{commentId} {
        allow read, list: if true;
        allow create: if isSignedIn() && isNotBanned();
        allow update: if isAdmin() || (isSignedIn() && isNotBanned());
        allow delete: if isAdmin() || (isSignedIn() && resource.data.authorId == request.auth.uid);

        match /replies/{replyId} {
          allow read, list: if true;
          allow create: if isSignedIn() && isNotBanned();
          allow update: if isAdmin() || (isSignedIn() && isNotBanned());
          allow delete: if isAdmin() || (isSignedIn() && resource.data.authorId == request.auth.uid);
        }
      }
    }

    match /direct_conversations/{chatId} {
      allow read, list: if isSignedIn() && (request.auth.uid in resource.data.participants || isAdmin());
      allow create: if isSignedIn() && isNotBanned();
      allow update: if isSignedIn() && (request.auth.uid in resource.data.participants);

      match /messages/{messageId} {
        allow read, list: if isSignedIn() && (request.auth.uid in get(/databases/$(database)/documents/direct_conversations/$(chatId)).data.participants || isAdmin());
        allow create: if isSignedIn() && isNotBanned() && (request.auth.uid in get(/databases/$(database)/documents/direct_conversations/$(chatId)).data.participants);
      }
    }

    match /notifications/{notificationId} {
      allow read, delete, list: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if isSignedIn();
    }

    match /reports/{reportId} {
      allow create: if isSignedIn() && isNotBanned();
      allow read, list, update, delete: if isAdmin();
    }

    match /groups/{groupId} {
      allow read, list: if isSignedIn();
      allow create: if isSignedIn() && isNotBanned();
      allow update: if isSignedIn() && (request.auth.uid in resource.data.members || isAdmin());
      allow delete: if isAdmin();
      
      match /messages/{messageId} {
        allow read, list, create: if isSignedIn() && (request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members || isAdmin());
      }
    }
  }
}

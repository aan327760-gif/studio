
{
  "entities": {
    "User": {
      "title": "User",
      "type": "object",
      "description": "Represents a registered citizen on the Al-Qaumiyun platform.",
      "properties": {
        "uid": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "displayName": { "type": "string" },
        "points": { "type": "number", "description": "Starting at 100 points." },
        "nationality": { "type": "string", "description": "The country the user represents." },
        "bio": { "type": "string", "maxLength": 150 },
        "photoURL": { "type": "string", "format": "uri" },
        "role": { "type": "string", "enum": ["user", "admin"] },
        "rank": { "type": "string", "enum": ["Beginner", "Active", "Distinguished"] },
        "followersCount": { "type": "number" },
        "followingCount": { "type": "number" }
      },
      "required": ["uid", "email", "displayName", "points", "nationality"]
    },
    "Article": {
      "title": "Article",
      "type": "object",
      "description": "A newspaper article limited to 1000 characters.",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "content": { "type": "string", "maxLength": 1000 },
        "section": { "type": "string", "enum": ["Politics", "Culture", "Sports", "Economy", "National"] },
        "mediaUrl": { "type": "string" },
        "mediaType": { "type": "string" },
        "authorId": { "type": "string" },
        "authorName": { "type": "string" },
        "authorNationality": { "type": "string" },
        "likesCount": { "type": "number" },
        "commentsCount": { "type": "number" },
        "tags": { "type": "array", "items": { "type": "string" } },
        "createdAt": { "type": "string", "format": "date-time" }
      }
    }
  },
  "auth": {
    "providers": ["password", "google"]
  }
}

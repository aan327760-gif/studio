
{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Extended user profile information",
      "type": "object",
      "properties": {
        "uid": { "type": "string" },
        "displayName": { "type": "string" },
        "photoURL": { "type": "string" },
        "bannerURL": { "type": "string", "description": "Profile cover image URL" },
        "bio": { "type": "string" },
        "phoneNumber": { "type": "string", "description": "Optional phone number" },
        "isPro": { "type": "boolean", "description": "Subscription status" },
        "language": { "type": "string", "enum": ["en", "ar"] },
        "followersCount": { "type": "number" },
        "followingCount": { "type": "number" }
      },
      "required": ["uid", "displayName"]
    },
    "Follow": {
      "title": "Follow Relationship",
      "description": "Represents a user following another user",
      "type": "object",
      "properties": {
        "followerId": { "type": "string" },
        "followingId": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      }
    },
    "Post": {
      "title": "Feed Post",
      "description": "Social media post in the feed",
      "type": "object",
      "properties": {
        "authorId": { "type": "string" },
        "content": { "type": "string" },
        "mediaUrl": { "type": "string" },
        "mediaType": { "type": "string", "enum": ["image", "video"] },
        "likesCount": { "type": "number" },
        "createdAt": { "type": "string", "format": "date-time" },
        "likedBy": { "type": "array", "items": { "type": "string" } },
        "mediaSettings": {
          "type": "object",
          "properties": {
            "filter": { "type": "string" },
            "textOverlay": { "type": "string" },
            "textColor": { "type": "string" },
            "textBg": { "type": "boolean" },
            "textX": { "type": "number" },
            "textY": { "type": "number" },
            "stickers": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "text": { "type": "string" },
                  "color": { "type": "string" },
                  "x": { "type": "number" },
                  "y": { "type": "number" },
                  "scale": { "type": "number" },
                  "rotation": { "type": "number" }
                }
              }
            }
          }
        }
      }
    },
    "Comment": {
      "title": "Comment",
      "description": "A comment on a post",
      "type": "object",
      "properties": {
        "postId": { "type": "string" },
        "authorId": { "type": "string" },
        "authorName": { "type": "string" },
        "authorAvatar": { "type": "string" },
        "text": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      }
    },
    "Notification": {
      "title": "Notification",
      "description": "In-app notifications for users",
      "type": "object",
      "properties": {
        "userId": { "type": "string", "description": "The recipient of the notification" },
        "type": { "type": "string", "enum": ["like", "comment", "follow", "message"] },
        "fromUserId": { "type": "string" },
        "fromUserName": { "type": "string" },
        "fromUserAvatar": { "type": "string" },
        "postId": { "type": "string", "optional": true },
        "read": { "type": "boolean" },
        "createdAt": { "type": "string", "format": "date-time" }
      }
    },
    "LammaGroup": {
      "title": "Lamma Group",
      "description": "Chat community group",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" },
        "createdBy": { "type": "string" },
        "isPrivate": { "type": "boolean" },
        "memberCount": { "type": "number" },
        "icon": { "type": "string" }
      }
    },
    "ChatMessage": {
      "title": "ChatMessage",
      "description": "Messages within a Lamma Group",
      "type": "object",
      "properties": {
        "senderId": { "type": "string" },
        "text": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      }
    }
  },
  "auth": {
    "providers": ["google.com", "password"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": "UserProfile",
      "description": "User profile data"
    },
    "/follows/{followId}": {
      "schema": "Follow",
      "description": "Follow relationships"
    },
    "/posts/{postId}": {
      "schema": "Post",
      "description": "Feed posts"
    },
    "/posts/{postId}/comments/{commentId}": {
      "schema": "Comment",
      "description": "Comments on a post"
    },
    "/notifications/{notificationId}": {
      "schema": "Notification",
      "description": "User notifications"
    },
    "/groups/{groupId}": {
      "schema": "LammaGroup",
      "description": "Lamma communities"
    },
    "/groups/{groupId}/messages/{messageId}": {
      "schema": "ChatMessage",
      "description": "Messages in a group chat"
    }
  }
}


{
  "entities": {
    "User": {
      "title": "User",
      "type": "object",
      "description": "يمثل مواطناً مسجلاً في جريدة القوميون.",
      "properties": {
        "uid": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "displayName": { "type": "string" },
        "points": { "type": "number" },
        "nationality": { "type": "string" },
        "bio": { "type": "string" },
        "location": { "type": "string" },
        "photoURL": { "type": "string" },
        "bannerURL": { "type": "string" },
        "role": { "type": "string", "enum": ["user", "moderator", "admin"] },
        "isVerified": { "type": "boolean" },
        "followersCount": { "type": "number" },
        "followingCount": { "type": "number" },
        "lastTokenUpdate": { "type": "string" }
      },
      "required": ["uid", "email", "displayName"]
    },
    "Article": {
      "title": "Article",
      "type": "object",
      "description": "مقال صحفي قومي.",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "content": { "type": "string" },
        "section": { "type": "string" },
        "tags": { "type": "array", "items": { "type": "string" } },
        "mediaUrl": { "type": "string" },
        "authorId": { "type": "string" },
        "authorName": { "type": "string" },
        "authorIsVerified": { "type": "boolean" },
        "likesCount": { "type": "number" },
        "commentsCount": { "type": "number" },
        "priorityScore": { "type": "number" },
        "likedBy": { "type": "array", "items": { "type": "string" } },
        "savedBy": { "type": "array", "items": { "type": "string" } }
      }
    },
    "Notification": {
      "title": "Notification",
      "type": "object",
      "properties": {
        "userId": { "type": "string" },
        "type": { "type": "string", "enum": ["like", "comment", "follow", "system"] },
        "fromUserName": { "type": "string" },
        "message": { "type": "string" },
        "read": { "type": "boolean" },
        "createdAt": { "type": "string", "format": "date-time" }
      }
    }
  },
  "auth": {
    "providers": ["password", "google"]
  },
  "firestore": {
    "/users/{userId}": { "schema": "#/entities/User", "description": "ملفات المواطنين." },
    "/articles/{articleId}": { "schema": "#/entities/Article", "description": "أرشيف المقالات." },
    "/stories/{storyId}": { "schema": "object", "description": "القصص اليومية." },
    "/notifications/{notifId}": { "schema": "#/entities/Notification", "description": "تنبيهات النظام والتفاعلات." },
    "/follows/{followId}": { "schema": "object", "description": "علاقات المتابعة السيادية." }
  }
}

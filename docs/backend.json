
{
  "entities": {
    "User": {
      "title": "User",
      "type": "object",
      "description": "يمثل مواطناً مسجلاً في جريدة القوميون.",
      "properties": {
        "uid": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "displayName": { "type": "string" },
        "points": { "type": "number" },
        "nationality": { "type": "string" },
        "bio": { "type": "string" },
        "photoURL": { "type": "string" },
        "role": { "type": "string" },
        "isVerified": { "type": "boolean" }
      },
      "required": ["uid", "email", "displayName"]
    },
    "Article": {
      "title": "Article",
      "type": "object",
      "description": "مقال صحفي قومي.",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "content": { "type": "string" },
        "priorityScore": { "type": "number" }
      }
    },
    "Story": {
      "title": "Story",
      "type": "object",
      "description": "قصة سيادية قصيرة (صورة أو فيديو 30 ثانية).",
      "properties": {
        "id": { "type": "string" },
        "authorId": { "type": "string" },
        "authorName": { "type": "string" },
        "authorAvatar": { "type": "string" },
        "mediaUrl": { "type": "string" },
        "mediaType": { "type": "string", "enum": ["image", "video"] },
        "createdAt": { "type": "string", "format": "date-time" },
        "expiresAt": { "type": "string", "format": "date-time" }
      }
    }
  },
  "auth": {
    "providers": ["password", "google"]
  },
  "firestore": {
    "/users/{userId}": { "schema": "#/entities/User", "description": "ملفات المواطنين." },
    "/articles/{articleId}": { "schema": "#/entities/Article", "description": "أرشيف المقالات." },
    "/stories/{storyId}": { "schema": "#/entities/Story", "description": "القصص اليومية (الستوري)." }
  }
}

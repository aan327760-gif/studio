
{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Extended user profile information",
      "type": "object",
      "properties": {
        "uid": { "type": "string" },
        "displayName": { "type": "string" },
        "photoURL": { "type": "string" },
        "bannerURL": { "type": "string" },
        "bio": { "type": "string", "maxLength": 150 },
        "phoneNumber": { "type": "string" },
        "location": { "type": "string" },
        "joinedAt": { "type": "string", "format": "date-time" },
        "isPro": { "type": "boolean" },
        "isVerified": { "type": "boolean" },
        "language": { "type": "string", "enum": ["en", "ar"] },
        "followersCount": { "type": "number" },
        "followingCount": { "type": "number" },
        "isBannedUntil": { "type": "string", "format": "date-time" },
        "role": { "type": "string", "enum": ["user", "admin"] }
      },
      "required": ["uid", "displayName"]
    },
    "Post": {
      "title": "Feed Post",
      "description": "Social media post in the feed",
      "type": "object",
      "properties": {
        "authorId": { "type": "string" },
        "content": { "type": "string" },
        "mediaUrl": { "type": "string" },
        "mediaUrls": { "type": "array", "items": { "type": "string" } },
        "mediaType": { "type": "string", "enum": ["image", "video", "audio", "album"] },
        "likesCount": { "type": "number" },
        "likedBy": { "type": "array", "items": { "type": "string" } },
        "savesCount": { "type": "number" },
        "savedBy": { "type": "array", "items": { "type": "string" } },
        "commentsCount": { "type": "number" },
        "privacy": { "type": "string", "enum": ["public", "followers"] },
        "allowComments": { "type": "boolean" },
        "createdAt": { "type": "string", "format": "date-time" }
      }
    },
    "Comment": {
      "title": "Comment",
      "description": "A comment on a post",
      "type": "object",
      "properties": {
        "postId": { "type": "string" },
        "authorId": { "type": "string" },
        "authorName": { "type": "string" },
        "authorAvatar": { "type": "string" },
        "authorHandle": { "type": "string" },
        "text": { "type": "string", "maxLength": 100 },
        "likesCount": { "type": "number" },
        "likedBy": { "type": "array", "items": { "type": "string" } },
        "createdAt": { "type": "string", "format": "date-time" }
      }
    }
  },
  "auth": {
    "providers": ["google.com", "password"]
  },
  "firestore": {
    "/users/{userId}": { "schema": "UserProfile", "description": "Citizen profiles" },
    "/posts/{postId}": { "schema": "Post", "description": "Sovereign insights" },
    "/posts/{postId}/comments/{commentId}": { "schema": "Comment", "description": "Post discussions" }
  }
}
